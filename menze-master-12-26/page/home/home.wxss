.container {
    display: flex;
    flex-flow: column nowrap;
    background: #F8F8F8;
}

/* profile-bar */
.profile-bar {
    display: flex;
    flex-flow: row-reverse nowrap;
    height: 100rpx;
    align-items: center;
}

.profile {
    height: 60rpx;
    width: 60rpx;
    margin-right: 20rpx;
    border-radius: 50%;
}

/* logo-bar */
.logo-bar {
    display: flex;
    flex-flow: row nowrap;
    height: 150rpx;
    /*background: beige;*/
    align-items: center;
    justify-content: center;
}

.logo {
    height: 70rpx;
    width: 70rpx;
    border-radius: 50%;
}

.app-name {
    font-size: 40rpx;
    font-family: "Microsoft YaHei UI";
    margin-left: 8rpx;
}

/* home-box */
.search-box {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    background: white;
    height: 100rpx;
    margin: 0 25rpx 0 25rpx;
    box-shadow: 2rpx 2rpx 2rpx #CFCFCF;
    border-radius: 4rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.search-input {
    flex-grow: 1;
    font-size: 36rpx;
    font-family: "Microsoft YaHei UI";
}

.search-img {
    height: 50rpx;
    width: 50rpx;
    margin-left: 20rpx;
}


/* home-option-bar */
.search-option-bar {
    display: flex;
    flex-flow: row nowrap;
    height: 180rpx;
    align-items: center;
}

.search-option-item {
    display: flex;
    flex-flow: column nowrap;
    flex-grow: 1;
    align-items: center;
    justify-content: center;
}

.search-option-icon {
    height: 50rpx;
    width: 50rpx;
}

.search-option-text {
    margin-top: 8rpx;
    color: #8a8a8a;
    font-size: 28rpx;
    font-family: "Microsoft YaHei UI";
}

/* shop list */
.shop-list {
    /*background-color: red;*/
    background: white;
    display: flex;
    flex-flow: column;
    /*height: 530rpx;*/
}

.shop-item {
    /*background-color: green;*/
    display: flex;
    flex-flow: row nowrap;
    padding: 25rpx;
}

.shop-image {
    background:'../../image/waitToUpload.jpg';
    height: 150rpx;
    width: 200rpx;
}


.shop-description {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    margin-left: 25rpx;
    justify-content: space-between;
}

.shop-name {
    font-family: "Microsoft YaHei UI";
    font-size: 36rpx;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box !important;
    -webkit-box-orient: vertical;
    -webkit-line-break: 2;
    word-break: break-all;  
    width: 500rpx;  
}

.shop-type {
    font-family: "Microsoft YaHei UI";
    font-size: 24rpx;
    color: white;
    background: coral;
    border-radius: 5rpx;
    padding: 10rpx 15rpx 10rpx 15rpx;
    width: 80rpx;
    text-align: center;
}

.shop-address {
    
    margin-top: 10rpx;
    display: flex;
    font-family: "Microsoft YaHei UI";
    font-size: 28rpx;
    color: grey;
    height: 40rpx;
    justify-content: space-between;
}
.point-image {
    height: 40rpx;
    width:40rpx;
}
.address{
    font-family: "Microsoft YaHei UI";
    font-size: 28rpx;
    color: grey;
    height: auto;
    width: auto;
    margin: auto;
}
.addressView {
    display: flex;
}
.distanceView {
    display: flex;
    height: 40rpx;
    margin-right: 10rpx;
}
.location-img {
    height: 40rpx;
    width: 40rpx;
}
.location-text {
    margin: auto;
    height: auto;
    font-family: "Microsoft YaHei UI";
    font-size: 28rpx;
    color: grey;
}
.line {
    margin-left: 25rpx;
    margin-right: 25rpx;
    background: #eFeFeF;
    height: 1rpx;
}

.loading-container {
    display: flex;
    flex-flow: row nowrap;
    background: white;
    align-items: center;
    justify-content: center;
    height: 700rpx;
}

.loading-text{
    font-size: 32rpx;
    font-family: "Microsoft YaHei UI";
}
